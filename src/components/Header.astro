---
interface Props {
  name: string;
  title: string;
  contact?: {
    email?: string;
    location?: string;
    tel?: string;
  };
  socialLinks?: {
    github?: string;
    twitter?: string;
    linkedin?: string;
    email?: string;
    portfolio?: string;
    zenn?: string;
  };
}

const { name, title, contact = {}, socialLinks = {} } = Astro.props;

// 名前を日本語名と英語名に分割
const nameParts = name.split(' | ');
const japaneseName = nameParts[0] || name;
const englishName = nameParts[1] || '';
---

<header class="mb-12 print:mb-8 text-center" role="banner" aria-label="プロフィール情報" id="profile-header">
  <h1 class="text-4xl print:text-3xl font-semibold mb-3 print:mb-2 text-[#1d1d1f] dark:text-[#f5f5f7]" style="letter-spacing: -0.02em;">
    <span class="block" id="header-name-ja">{japaneseName}</span>
    {englishName && (
      <span class="block mt-1 text-2xl print:text-xl font-normal opacity-75 tracking-wider" id="header-name-en">
        {englishName}
      </span>
    )}
  </h1>
  <p class="text-lg print:text-base mb-4 print:mb-3 opacity-80 text-[#6e6e73] dark:text-[#a1a1a6]" id="header-title">
    {title}
  </p>

  {(contact.email || contact.location || contact.tel) && (
    <div class="flex justify-center gap-4 mb-5 print:mb-3 text-sm print:text-xs opacity-70 flex-wrap text-[#6e6e73] dark:text-[#a1a1a6]">
      {contact.email && (
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <a href={`mailto:${contact.email}`} class="link" aria-label={`メールを送信: ${contact.email}`}>{contact.email}</a>
        </div>
      )}
      {contact.location && (
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span id="header-location">{contact.location}</span>
        </div>
      )}
      {contact.tel && (
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <a href={`tel:${contact.tel}`} class="link" aria-label={`電話をかける: ${contact.tel}`}>{contact.tel}</a>
        </div>
      )}
    </div>
  )}

  {socialLinks && Object.keys(socialLinks).length > 0 && (
    <nav class="flex justify-center gap-5 print:gap-4 items-center text-sm print:text-xs text-text-light dark:text-text-dark" aria-label="ソーシャルメディアリンク">
      {socialLinks.github && (
        <a
          href={socialLinks.github}
          target="_blank"
          rel="noopener noreferrer"
          class="link flex items-center gap-2"
          aria-label="GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          GitHub
        </a>
      )}
      {socialLinks.linkedin && (
        <a
          href={socialLinks.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="link flex items-center gap-2"
          aria-label="LinkedIn"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          LinkedIn
        </a>
      )}
      {socialLinks.portfolio && (
        <a
          href={socialLinks.portfolio}
          target="_blank"
          rel="noopener noreferrer"
          class="link flex items-center gap-2"
          aria-label="Portfolio"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
          </svg>
          Portfolio
        </a>
      )}
      {socialLinks.zenn && (
        <a
          href={socialLinks.zenn}
          target="_blank"
          rel="noopener noreferrer"
          class="link flex items-center gap-2"
          aria-label="Zenn"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M.264 23.771h4.984c.264 0 .498-.147.64-.352L19.614.874c.176-.293-.029-.645-.381-.645h-4.72c-.235 0-.44.117-.557.323L.03 23.361c-.088.176.029.41.234.41zm17.181-.352l6.479-10.408c.205-.323-.029-.733-.41-.733h-4.691c-.176 0-.352.088-.44.235l-6.655 10.643c-.176.293.029.645.352.645h4.779c.234-.001.468-.148.646-.352z"/>
          </svg>
          Zenn
        </a>
      )}
    </nav>
  )}
</header>

